{{#each errors}}
    <div class="alert alert-danger mt-2">{{text}}</div>

{{else}}

{{/each}}

<div class="card container mt-3 col-8 purple-border">
    <div class="card-body mt-2">
        <h2>Let's start!</h2>
        <hr>
        <form action="" method="POST">
            <div class="row-cols-2">
                <label for="username">Username:</label>
                    <input type="text" class="form-control-sm" placeholder="Enter your username" name="username"><br>
                <label for="email" class="mt-2">Email:</label>
                    <input type="email" class="form-control-sm" placeholder="Enter your email" name="email"><br>
                <label for="password" class="mt-2">Password:</label>
                    <input type="password" class="form-control-sm" placeholder="Enter your password" name="password"><br>
                <label for="passwordConfirmation" class="mt-2">Confirm password:</label>
                    <input type="password" class="form-control-sm" placeholder="Enter your password again" name="passwordConfirmation"><br>
            </div>
            <hr class="mt-3">
            <button class="btn-primary">Create account</button>

        </form>
    </div>
</div>
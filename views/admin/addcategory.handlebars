{{#each errors}}
    <div class="alert alert-danger mt-2">{{text}}</div>
{{else}}

{{/each}}

<div class="card container mt-3 col-8 purple-border">
    <div class="card-body mt-2 col">
        <h2>Add category</h2>
        <hr>
        <form action="/admin/categories/new" method="POST">
            <div class="row-cols-2">
                <label for="title">Title:</label>
                    <input type="text" class="form-control-sm" placeholder="Category title" name="title" id="title"><br>
                <label for="slug" class="mt-2">Slug:</label>
                    <input type="text" class="form-control-sm" placeholder="Category slug" name="slug" id="slug"><br>
            </div>
            <hr class="mt-3">
            <button class="btn-primary">Add</button>

        </form>
    </div>
</div>
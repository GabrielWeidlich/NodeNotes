{{#each errors}}
    <div class="alert alert-danger mt-2">{{text}}</div>
{{else}}

{{/each}}

<div class="card container mt-3 col-8 yellow-border">
    <div class="card-body mt-2 col">
        <h1>Add category</h1>
        <hr>
        <form action="/admin/categories/new" method="POST">
            <div class="row-cols-2">
                <label for="title" method="POST">Title:</label>
                    <input type="text" class="form-control-sm" placeholder="Category title" name="title" id="title"><br><br>
                <label for="slug">Slug:</label>
                    <input type="text" class="form-control-sm" placeholder="Category slug" name="slug" id="slug"><br><br>
            </div>
            <button class="btn btn-background-gradient">Add</button>

        </form>
    </div>
</div>
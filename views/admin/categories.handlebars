{{#each categories}}
<div class="card col-8 mx-auto mt-4">
    <div class="card-body">
        <h4>Title: {{title}}</h1>
            <hr>
            <small>slug: {{slug}}</small><br>
            <small>Creation date: {{date}}</small><br>
            <div class="mt-2 d-flex align-items-center">
                <a href="/admin/categories/edit/{{_id}}" class="col-xxl-1"><button class="btn btn-dark "
                        name="title">Edit</button></a>
                <form action="/admin/categories/delete" method="post">
                    <input type="hidden" name="id" value="{{_id}}">
                    <button class="btn btn-danger" type="submit">Delete</button>
                </form>
            </div>
    </div>
</div>
{{else}}
<h4 class="mt-3">Nenhuma categoria registrada.</h4>
{{/each}}
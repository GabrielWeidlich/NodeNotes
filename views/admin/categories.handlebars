{{#each categories}}
<div class="card col-8 mx-auto mt-4">
    <div class="card-body">
        <h4>Title: {{title}}</h1>
            <hr>
            <small>slug: {{slug}}</small><br>
            <small>Creation date: {{date}}</small><br>
            <div class="mt-2">
                <a href="/admin/categories/edit/{{_id}}"><button class="btn btn-dark" name="title">Edit</button></a>
                <button class="btn btn-danger">Delete</button>
            </div>
    </div>
</div>
{{else}}
<h4 class="mt-3">Nenhuma categoria registrada.</h4>
{{/each}}